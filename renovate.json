{
    "extends": [
        "config:recommended"
    ],
    "prTitle": "Update dependencies: {{groupName}}",
    "labels": [
        "auto pr",
        "dependencies update"
    ],
    "prCreation": "not-pending",
    "branchPrefix": "update-dependencies-",
    "packageRules": [
        {
            "description": "Update Android Gradle plugin weekly",
            "groupName": "Android Gradle plugin",
            "schedule": [
                "every weekend"
            ],
            "matchPackageNames": [
                "^com\\.android\\.tools\\.build:gradle$",
                "^com\\.android\\.application$",
                "^com\\.android\\.library$",
                "^gradle$"
            ]
        },
        {
            "description": "Update Kotlin dependencies monthly",
            "groupName": "Kotlin and related dependencies",
            "schedule": [
                "every month"
            ],
            "matchPackageNames": [
                "^org\\.jetbrains\\.kotlin"
            ]
        },
        {
            "description": "Update Compose dependencies monthly",
            "groupName": "Compose and related dependencies",
            "schedule": [
                "every month"
            ],
            "matchPackageNames": [
                "compose"
            ]
        },
        {
            "description": "Update other dependencies monthly",
            "groupName": "Other dependencies",
            "schedule": [
                "every month"
            ],
            "matchPackageNames": [
                "/.*/",
                "!/^com\\.android\\.tools\\.build:gradle$/",
                "!/^com\\.android\\.application$/",
                "!/^com\\.android\\.library$/",
                "!/^gradle$/",
                "!/^org\\.jetbrains\\.kotlin/",
                "!/compose/"
            ]
        }
    ]
}
